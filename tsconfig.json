{
  "compilerOptions": {
    "declaration": true,
    "target": "ES2021",
    "outDir": "dist",
    "module": "commonjs",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true
  },
  "include": ["src"],
  "exclude": ["src/test"]
}
